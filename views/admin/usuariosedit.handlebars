<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
          <h4 class="mb-0">Editar Usuário</h4>
        </div>
        <div class="card-body">
          <form action="/admin/usuarios/editar" method="POST">

            <input type="hidden" name="id" value="{{usuario._id}}">

            <div class="mb-3">
              <label for="nome" class="form-label">Nome</label>
              <input 
                type="text" 
                class="form-control" 
                id="nome" 
                name="nome" 
                value="{{usuario.nome}}" 
                required>
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">E-mail</label>
              <input 
                type="email" 
                class="form-control" 
                id="email" 
                name="email" 
                value="{{usuario.email}}" 
                required>
            </div>
            <div class="form-check mb-3">
              <input 
                type="checkbox" 
                class="form-check-input" 
                id="roleAdmin" 
                name="roleAdmin" 
                {{#if usuario.roleAdmin}}checked{{/if}}>
              <label class="form-check-label" for="roleAdmin">
                Administrador
              </label>
            </div>
            <div class="d-flex justify-content-between">
              <a href="/admin/usuarios" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Voltar
              </a>
              <button type="submit" class="btn btn-success">
                <i class="bi bi-save"></i> Salvar Alterações
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
