<div class="container mt-4">
  <div class="card shadow-sm">
    {{!-- <div class="card-header bg-primary text-white">
      <h4 class="mb-0">Lista de Usuários</h4>
    </div> --}}
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Lista de Usuários</h2>
        <a href="/admin/usuarios/add" class="btn btn-success">
            <i class="bi bi-person-plus-fill"></i> Adicionar Novo Usuário
        </a>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
          <thead class="table-dark">
            <tr>
              <th scope="col">ID</th>
              <th scope="col">Nome</th>
              <th scope="col">E-mail</th>
              <th scope="col">Admin</th>
              <th scope="col" class="text-center">Ações</th>
            </tr>
          </thead>
          <tbody>
            {{#each usuarios}}
              <tr>
                <td>{{this._id}}</td>
                <td>{{this.nome}}</td>
                <td>{{this.email}}</td>
                <td>
                  {{#if this.roleAdmin}}
                    <span class="badge bg-success">Sim</span>
                  {{else}}
                    <span class="badge bg-secondary">Não</span>
                  {{/if}}
                </td>
                <td class="text-center">
                  <a href="/admin/usuarios/editar/{{this._id}}" class="btn btn-sm btn-warning me-2">
                    <i class="bi bi-pencil-square"></i> Editar
                  </a>
                  <form action="/admin/usuarios/deletar/{{this._id}}" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Tem certeza que deseja deletar este usuário?')">
                      <i class="bi bi-trash"></i> Deletar
                    </button>
                  </form>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
