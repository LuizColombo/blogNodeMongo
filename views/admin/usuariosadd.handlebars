{{#each erros}}
    <div class="alert alert-danger" role="alert">
        {{texto}}
    </div>
{{/each}}

<div class="card shadow-lg mt-4">
  <div class="card-header bg-primary text-white text-center">
    <h4>Criar nova Conta</h4>
  </div>
  <div class="card-body">
    <form action="/admin/usuarios/add" method="POST">
      <div class="mb-3">
        <label for="nome" class="form-label">Nome</label>
        <input type="text" class="form-control" id="nome" name="nome" placeholder="Nome Completo" required>
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">E-mail</label>
        <input type="email" class="form-control" id="email" name="email" placeholder="exemplo@email.com" required>
      </div>
      <div class="mb-3">
        <label for="senha" class="form-label">Senha</label>
        <input type="password" class="form-control" id="senha" name="senha" placeholder="Digite sua senha" required>
      </div>
      <div class="mb-3">
        <label for="senha2" class="form-label">Confirmação de Senha</label>
        <input type="password" class="form-control" id="senha2" name="senha2" placeholder="Confirme sua senha" required>
      </div>
    <div class="form-check mb-3">
        <input 
        type="checkbox" 
        class="form-check-input" 
        id="roleAdmin" 
        name="roleAdmin" 
        {{#if usuario.roleAdmin}}checked{{/if}}>
        <label class="form-check-label" for="roleAdmin">
        Administrador
        </label>
    </div>

      <div class="d-grid">
        <button type="submit" class="btn btn-primary">Criar Conta</button>
      </div>
    </form>
  </div>
</div>
